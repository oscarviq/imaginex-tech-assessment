{
  "name": "clock",
  "author": "Óscar Víquez",
  "version": "1.0.0",
  "description": "A Node.js/TypeScript clock application that prints messages at specific time intervals",
  "scripts": {
    "backend:dev": "nodemon --config ./src/backend/nodemon.json",
    "backend:serve": "ts-node --project ./src/backend/tsconfig.json ./src/backend/index.ts",
    "backend:test": "jest --config ./src/backend/jest.config.js",
    "backend:test:watch": "jest --config ./src/backend/jest.config.js --watchAll",
    "frontend:dev": "vite --config ./src/frontend/vite.config.mjs",
    "frontend:build": "vite --config ./src/frontend/vite.config.mjs build",
    "frontend:test": "vitest --config ./src/frontend/vite.config.mjs run",
    "frontend:test:watch": "vitest --config ./src/frontend/vite.config.mjs",
    "docker:build": "APP_VERSION=$(git describe --tags --always) docker compose -f ./docker/docker-compose.yaml -p oviquez-imaginex build --no-cache",
    "docker:up": "docker compose -f ./docker/docker-compose.yaml -p oviquez-imaginex up -d --force-recreate"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "chalk": "^4.1.2",
    "daisyui": "^5.0.35",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "jsdom": "^26.1.0",
    "mock-stdin": "^1.0.0",
    "nodemon": "^3.1.10",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-jest": "^0.0.1",
    "vite": "^6.3.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  }
}
