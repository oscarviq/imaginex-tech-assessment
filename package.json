{
  "name": "clock",
  "author": "Óscar Víquez",
  "version": "1.0.0",
  "description": "A Node.js/TypeScript clock application that prints messages at specific time intervals",
  "scripts": {
    "backend:dev": "ts-node-dev -r tsconfig-paths/register --respawn --watch src/backend,src/shared ./src/backend/index.ts",
    "backend:serve": "ts-node -r tsconfig-paths/register ./src/backend/index.ts",
    "backend:test": "jest",
    "backend:test:watch": "jest --watchAll",
    "frontend:dev": "vite"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "chalk": "^4.1.2",
    "daisyui": "^5.0.35",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-jest": "^0.0.1",
    "vite": "^6.3.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
